<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/robot2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:onClick="robot2Boton"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toEndOf="@+id/ninja2"
        app:layout_constraintTop_toTopOf="@+id/piezaJugador2"
        app:layout_constraintVertical_bias="0.091"
        app:srcCompat="@drawable/robot" />

    <ImageButton
        android:id="@+id/ninja2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:onClick="ninja2Boton"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/arquero2"
        app:layout_constraintTop_toTopOf="@+id/piezaJugador2"
        app:layout_constraintVertical_bias="0.091"
        app:srcCompat="@drawable/ninja" />

    <ImageButton
        android:id="@+id/arquero2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:onClick="arquero2Boton"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/piezaJugador2"
        app:layout_constraintVertical_bias="0.091"
        app:srcCompat="@drawable/arquero" />

    <TextView
        android:id="@+id/piezaJugador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pieza1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/piezaJugador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pieza2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <ImageButton
        android:id="@+id/arquero1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:background="@android:color/transparent"
        android:onClick="arquero1Boton"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/piezaJugador2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piezaJugador1"
        app:srcCompat="@drawable/arquero" />

    <ImageButton
        android:id="@+id/ninja1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="83dp"
        android:background="@android:color/transparent"
        android:onClick="ninja1Boton"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/piezaJugador2"
        app:layout_constraintStart_toEndOf="@+id/arquero1"
        app:layout_constraintTop_toBottomOf="@+id/piezaJugador1"
        app:layout_constraintVertical_bias="0.936"
        app:srcCompat="@drawable/ninja" />

    <ImageButton
        android:id="@+id/robot1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="60dp"
        android:background="@android:color/transparent"
        android:onClick="robot1Boton"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/piezaJugador2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toEndOf="@+id/ninja1"
        app:layout_constraintTop_toBottomOf="@+id/piezaJugador1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/robot" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/piezaJugador1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="iniciar"
        android:text="@string/iniciar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ninja2" />
</androidx.constraintlayout.widget.ConstraintLayout>